@model LogosoftProjekat.ViewModel.IdentityLoginVM
@{      Layout = "LayoutAnonim";
}
@using (Html.BeginForm("Login", "Identity", FormMethod.Post))
{
    <div class="imgcontainer">
        <img src="/logo/logosoft_logo.png" height="120" width="120" alt="Logosoft" class="avatar">
    </div>

    <div class="form-group">
        <label asp-for="UserName">User name</label>
        <input asp-for="UserName" type="text" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
    <button class="btn btn-primary" asp-area="" asp-controller="Identity" asp-action="Register">Register</button>
    @ViewBag.Error
}
<style>
    form {
        margin: 30px 200px 60px 200px
    }


    input[type=text], input[type=password] {
        width: 100%;
        padding: 15px 15px;
        margin: 8px 0;
        display: inline-block;
        border: 2px solid #808080;
        box-sizing: border-box;
    }

    button {
        background-color: #40cadd;
        color: white;
        padding: 20px 30px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }


        button:hover {
            opacity: 0.6;
        }



    .imgcontainer {
        text-align: center;
        margin: 30px 0 15px 0;
    }

    .container {
        padding: 12px;
    }
</style>


